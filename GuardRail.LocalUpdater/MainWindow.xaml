<Window
    x:Class="GuardRail.LocalUpdater.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GuardRail Updater"
    Height="350"
    Width="600"
    WindowStyle="None"
    ResizeMode="NoResize"
    Background="#f3f3f3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Grid.Row="0" Source="Assets/logo.png" Height="250" Width="600" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Label Grid.Column="1" Grid.Row="1" Name="Status" FontFamily="{StaticResource TekoRegular}" FontSize="10.0" FontStyle="Normal" FontWeight="Regular" />
        <ProgressBar Grid.Column="1" Grid.Row="2" Height="30" Minimum="0" Maximum="100" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" Name="ProgressBar" />
    </Grid>
</Window>