{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "Buzzer": {
        "BuzzerAddress": 6
    },
    "Keypad": {
        "ColumnPins": [ 17, 27, 22, 13 ],
        "RowPins": [ 23, 24, 25, 16 ],
        "KeypadTimeout": "00:00:03",
        "SubmitKey": "#"
    },
    "Light": {
        "RedLightAddress": 4,
        "GreenLightAddress": 5
    },
    "Nfc": {
        "SerialPort": "/dev/spidev0.0"
    },
    "UdpConfiguration": {
        "Port": 18989
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console" ],
        "MinimumLevel": "Information",
        "WriteTo": [
            { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "GuardRail.DoorClient"
        }
    }
}