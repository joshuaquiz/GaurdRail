<Window
    x:Class="GuardRail.LocalClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:controls="clr-namespace:GuardRail.LocalClient.Controls"
    xmlns:home="clr-namespace:GuardRail.LocalClient.Controls.Pages.Home"
    xmlns:setup="clr-namespace:GuardRail.LocalClient.Controls.Setup"
    mc:Ignorable="d"
    Title="GuardRail Client"
    WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Teko Bold" />
        </Style>
    </Window.Resources>
    <Grid
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch"
        Margin="0">
        <tb:TaskbarIcon
            IconSource="logo_icon.ico"
            ToolTipText="GuardRail is still active"
            TrayMouseDoubleClick="TaskBarIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu
                    Background="#f3f3f3">
                    <MenuItem Header="Open dashboard" Click="TaskBarIcon_TrayMouseDoubleClick" />
                    <MenuItem Header="Close application" Click="CloseMenuItem_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <setup:SetupUserControl
            x:Name="SetupControl"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Center" />
        <Grid
            x:Name="MainGrid"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <StackPanel
                x:Name="Header"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Orientation="Horizontal"
                Background="#FFF3F3F3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
                <Canvas
                    Height="30"
                    Width="30"
                    Margin="10">
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="0.005" ScaleY=".005"/>
                        </TransformGroup>
                    </Canvas.RenderTransform>
