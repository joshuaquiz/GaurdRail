                </Canvas>
                <Label
                    Content="GuardRail"
                    VerticalContentAlignment="Center"
                    VerticalAlignment="Stretch" />
            </StackPanel>
            <StackPanel
                x:Name="Menu"
                Grid.Row="1"
                Grid.Column="0"
                Orientation="Vertical"
                Background="#FFCCCCCC"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <controls:MenuItemControl
                    Title="Home"
                    PreviewMouseDown="HomeMenuItemControl_OnPreviewMouseDown" />
                <controls:MenuItemControl
                    Title="Users" />
                <controls:MenuItemControl
                    Title="Devices" />
                <controls:MenuItemControl
                    Title="Doors" />
                <controls:MenuItemControl
                    Title="Map" />
            </StackPanel>
            <StackPanel
                x:Name="Body"
                Grid.Row="1"
                Grid.Column="1"
                Orientation="Vertical"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <home:HomePageUserControl
                    x:Name="HomePageUserControl"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" />
            </StackPanel>
            <StackPanel
                x:Name="Footer"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Orientation="Horizontal"
                Background="#FFF3F3F3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FlowDirection="RightToLeft">
                <Label
                    x:Name="VersionTag"
                    VerticalContentAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>