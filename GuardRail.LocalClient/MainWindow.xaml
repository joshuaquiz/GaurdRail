<Window x:Class="GuardRail.LocalClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:setup="clr-namespace:GuardRail.LocalClient.Setup"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized">
    <Grid>
        <tb:TaskbarIcon
            IconSource="logo_icon.ico"
            ToolTipText="GuardRail is still active"
            TrayMouseDoubleClick="TaskBarIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu
                    Background="#f3f3f3">
                    <MenuItem Header="Open dashboard" Click="TaskBarIcon_TrayMouseDoubleClick" />
                    <MenuItem Header="Close application" Click="CloseMenuItem_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <setup:SetupUserControl x:Name="SetupUserControl" Visibility="Hidden" />
    </Grid>
</Window>