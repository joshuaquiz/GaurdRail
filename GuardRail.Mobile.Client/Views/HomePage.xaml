<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:GuardRail.Mobile.Client.Views"
                xmlns:viewModels="clr-namespace:GuardRail.Mobile.Client.ViewModels"
                x:Class="GuardRail.Mobile.Client.Views.HomePage"
                x:DataType="viewModels:HomePageViewModel"
                Title="{Binding Title}">
    <Grid
        ColumnDefinitions="*"
        RowDefinitions="*,50"
        BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Black}}">
        <Button
            Text="Click me!"
            Command="{x:Binding HandleTagTriggerCommand}"></Button>
    </Grid>
</views:BasePage>